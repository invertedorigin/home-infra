{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.yaml$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+version:\\s*(?<currentValue>[^\\s]+)",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+talosVersion:\\s*(?<currentValue>[^\\s]+)",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+kubernetesVersion:\\s*(?<currentValue>[^\\s]+)",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+-\\s*(?<currentValue>[^\\s]+)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.yaml$/"
      ],
      "matchStrings": [
        "imageName:\\s*(?<depName>ghcr\\.io/cloudnative-pg/postgresql):(?<currentValue>\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge patch updates for safe application workloads",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchManagers": [
        "docker",
        "helm-values",
        "custom.regex",
        "kustomize",
        "kubernetes"
      ],
      "matchPackageNames": [
        "ghcr.io/home-assistant/home-assistant",
        "ghcr.io/home-assistant-libs/python-matter-server",
        "ghcr.io/zwave-js/zwave-js-ui",
        "ghcr.io/paperless-ngx/paperless-ngx",
        "vaultwarden/server",
        "teslamate/teslamate",
        "ollama",
        "ollama/ollama",
        "open-webui",
        "grafana",
        "victoria-logs-single",
        "victoria-metrics-operator",
        "docker.io/victoriametrics/victoria-logs",
        "tailscale-operator"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": false
    },
    {
      "description": "Do not automerge Docker digest updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": false,
      "automergeType": "pr"
    },
    {
      "groupName": "monitoring patch upgrades",
      "groupSlug": "monitoring-patch",
      "matchPackageNames": [
        "grafana",
        "kube-prometheus-stack",
        "victoria-logs-single",
        "victoria-metrics-operator"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Never automerge cluster-critical components",
      "matchPackageNames": [
        "kubernetes/kubernetes",
        "siderolabs/talos",
        "ghcr.io/siderolabs/talosctl",
        "rook-ceph",
        "rook-ceph-cluster",
        "quay.io/ceph/ceph",
        "argoproj/argo-cd",
        "cilium",
        "external-secrets",
        "cert-manager",
        "metrics-server",
        "ingress-nginx",
        "cloudnative-pg"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "kubernetes/ingress-nginx"
      ],
      "versioning": "regex:^controller-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "matchPackageNames": [
        "koush/scrypted"
      ],
      "versioning": "regex:^18-jammy-full.s6-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "matchPackageNames": [
        "ollama/ollama",
        "open-webui",
        "ollama"
      ],
      "matchManagers": [
        "docker",
        "helm-values",
        "custom.regex",
        "kustomize",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "all ollama upgrades",
      "groupSlug": "all-ollama-upgrades"
    },
    {
      "matchPackageNames": [
        "docker.io/victoriametrics/victoria-logs",
        "kube-prometheus-stack",
        "grafana",
        "victoria-metrics-operator",
        "victoria-logs-single"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "all monitoring upgrades",
      "groupSlug": "all-monitoring-upgrades"
    },
    {
      "matchPackageNames": [
        "siderolabs/talos",
        "ghcr.io/siderolabs/talosctl",
        "jtcressy-home/talos-boot-assets"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "all talos upgrades",
      "groupSlug": "all-talos-upgrades"
    },
    {
      "matchPackageNames": [
        "ghcr.io/sdr-enthusiasts/docker-piaware",
        "ghcr.io/sdr-enthusiasts/docker-flightradar24",
        "ghcr.io/sdr-enthusiasts/docker-adsb-ultrafeeder"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "groupName": "all adsb upgrades",
      "groupSlug": "all-adsb-upgrades"
    },
    {
      "matchPackageNames": [
        "talos/talconfig.yaml"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "all kube upgrades",
      "groupSlug": "all-k8s-upgrades"
    }
  ]
}
